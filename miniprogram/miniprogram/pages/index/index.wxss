.container {
  display: flex;
  flex-direction: column;
  height: 100vh;
}

.filter-area, .sort-area {
  display: flex;
  padding: 15rpx;
  background: #f5f5f5;
}

.filter-area > picker, .sort-item {
  margin-right: 20rpx;
  padding: 10rpx 20rpx;
  background: #fff;
  border-radius: 8rpx;
}

.sort-item.active {
  color: #1989fa;
  font-weight: bold;
}

.content-area {
  flex: 1;
  height: 100%;
}

.media-list {
  padding: 20rpx;
}

.media-item {
  display: flex;
  margin-bottom: 20rpx;
  background: #fff;
  border-radius: 12rpx;
  overflow: hidden;
  box-shadow: 0 2rpx 10rpx rgba(0,0,0,0.1);
}

.media-item image {
  width: 200rpx;
  height: 280rpx;
}

.info {
  flex: 1;
  padding: 20rpx;
  display: flex;
  flex-direction: column;
}

.title {
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 10rpx;
}

.meta, .rating {
  font-size: 24rpx;
  color: #666;
  margin-top: 10rpx;
}

.loading, .no-more {
  text-align: center;
  padding: 30rpx;
  font-size: 28rpx;
  color: #999;
}