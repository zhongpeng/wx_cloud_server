.container {
  height: 100vh;
  display: flex;
  flex-direction: column;
}

.header {
  background-color: #fff;
  color: #333;
  padding: 20rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  border-bottom: 1rpx solid #eee;
}

.title {
  font-size: 36rpx;
  font-weight: bold;
  color: #b406e9;
}

.add-dish-text {
  color: #b406e9;
  font-size: 28rpx;
}

.menu-container {
  display: flex;
  flex: 1;
}

.category-list {
  width: 25%;
  background-color: #f5f5f5;
}

.category-item {
  padding: 20rpx;
  text-align: center;
  border-bottom: 1rpx solid #eee;
}

.category-item.active {
  background-color: #fff;
  color: #b406e9;
  font-weight: bold;
}

.add-category-text {
  color: #b406e9;
  text-align: center;
  padding: 20rpx;
  font-size: 28rpx;
}

.dish-list {
  width: 75%;
  padding: 20rpx;
}

.dish-item {
  display: flex;
  margin-bottom: 30rpx;
  padding-bottom: 20rpx;
  border-bottom: 1rpx solid #eee;
}

.dish-image {
  width: 200rpx;
  height: 200rpx;
  border-radius: 8rpx;
}

.dish-content {
  flex: 1;
  margin-left: 20rpx;
  position: relative;
}

.dish-name {
  font-size: 32rpx;
  font-weight: bold;
}

.estimated-time {
  font-size: 24rpx;
  color: #666;
  margin: 8rpx 0;
}

.dish-desc {
  font-size: 24rpx;
  color: #999;
  margin-bottom: 10rpx;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 1;
  overflow: hidden;
}

.dish-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.dish-desc {
  font-size: 24rpx;
  color: #999;
  margin-bottom: 20rpx;  /* 增加底部间距 */
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 1;
  overflow: hidden;
  line-height: 1.6;  /* 增加行高 */
}

.dish-footer {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-top: 15rpx;  /* 增加顶部间距 */
}
.order-count {
  display: flex;
  align-items: center;
}

.order-count text {
  margin-left: 5rpx;
  color: #b406e9;
  font-size: 24rpx;
}